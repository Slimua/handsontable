                }
            }
        }
        
        .footer {
            border-top: 1px solid $borderColor   
            color: $text2Color

            .copyright {
                border-top: 1px solid $borderColor
            }

            .footer-links { 
                color: $text2Color

                div { 
                    a { 
                        color: $text2Color

                        @media (hover: hover) {
                            &:hover {  
                                color: $hoverWhiteColor
                            }
                        }
                    }
                }

                .socail-links {                    
                    a {
                        @media (hover: hover) {
                            &:hover {  
                                background: $borderColor
                            }
                        }
                    }
                }
            }

            .footer-support { 
                color: $text2Color

                .edit-link a { 
                    i { filter: hue-rotate(190deg) invert(1) }

                    @media (hover: hover) {
                        &:hover {  
                            color: $linkHoverColor
                        }
                    }
                }
            }

            .rate-post { 
                button { 
                    background: $borderColor !important
                    @media (hover: hover) {
                        &:hover {  
                            background: $bgColor !important
                        }
                    }
                }
            }

            .dark-mode { 
                .inner { 
                    background: $borderColor 
                    color: $textColor

                    @media (hover: hover) {
                        &:hover {  
                            background: $sideColor
                        }
                    }
                }
            }
        }

        button:not(.theme-code-group__nav-tab, .handsontable *), .report {
            background: $sideColor 
            border: 1px solid $lightBorderColor
            color: $textColor

