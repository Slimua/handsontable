/* Themes */
@import 'theme-dark'
@import 'theme-light'

html.theme-dark {

  &,
  div#app,
  header,
  div.links,
  aside.sidebar {
    background $backgroundColor
  }

  body {
    color $fontColor
  }

  a {
    color $linkFontColor
  }

  h1, h2, h3, h4, h5, h6, p {
    border-bottom-color $sectionBorderColor
  }
  
  /* Navbar */
  header.navbar {
    border-color $sectionBorderColor

    /* Navbar links */
    & .nav-link {
      color $fontColor
    }
  }

  /* Searchbox */
  .search-box {
    input {
      background $searchBoxBackground url(/img/search.svg) 0.6rem 0.5rem no-repeat
      background-size 1rem
      border-color #43464d
    }

    .searchbox-search-icon {
      stroke $searchIconColor
    }
  }

  /* Dropdown */
  .dropdown-wrapper {
    & .title {
      color $fontColor
    }
    & .arrow.down {
      border-top-color $fontColor
    }
    .nav-dropdown {
      background-color $backgroundColor
    }
  }

  /* Scrollbar styles */
  scrollbar() {
    // works on Chrome, Edge, and Safari
    &::-webkit-scrollbar {
      width 12px // width of the entire scrollbar
    }

    &::-webkit-scrollbar-track {
      background $backgroundColor // color of the tracking area
    }

    &::-webkit-scrollbar-thumb {
      background-color $scrollbarThumb // color of the scroll thumb
      border-radius 20px // roundness of the scroll thumb
      border 2px solid $backgroundColor // creates padding around scroll thumb
    }

    &::-webkit-scrollbar-corner {
      background $backgroundColor
    }

    // works on Firefox
    & {
      scrollbar-width thin
      scrollbar-color $scrollbarThumb $backgroundColor
    }
  }

  /* Sidebar styles */
  .sidebar {
    border-right-color $sectionBorderColor
    scrollbar()

    // sidebar collapsible headings
    & .sidebar-heading {
      color $fontColor

      & .arrow,
      & .arrow-down {
        border-color $fontColor
      }
    }

    // links in the sidebar
    & a.sidebar-link {
      color $fontColor

      &:hover {
        background #242526
      }

      &.active {
        background #242526
      }
    }

    .sidebar-group {
      &:not(.collapsable) .sidebar-heading:not(.clickable) {
        cursor auto
        color $fontColor
      }
    }
  }

  /* Table of contents styles */
  .table-of-contents {
    border-left-color $sectionBorderColor
    scrollbar()

    .toc-container-header {
      color $fontColor
    }

    a {
      color $fontColor

      &.active {
        color: $fontColor
        font-weight bold
      }

      &:hover {
        color $fontColor
      }
    }
  }

  /* Tabs component styles */
  .tabs-component {
    border-color #4d4d4e

    a {
      color $fontColor !important

      &:hover {
        color $linkFontColor !important
      }
    }

    .tabs-component-tabs {
      border-bottom-color #4d4d4e
      background #2f3133

      .tabs-component-tab-a {
        color $fontColor
      }
    }

    .tabs-component-panels {
      background-color #282C34
      border-radius 0

      section {
        &#preview {
          color initial
          background-color #ffffff
        }

        &#code {
          pre {
            padding 20px 24px

            scrollbar()
          }
        }

        &#html {
          pre {
            scrollbar()
          }
        }
      }
    }
  }

  /* A navigation element containing clickable fields (columns) */
  .row-items-container {
    .row-item {
      border-color $rowItemBorderColor
      color $fontColor

      &:hover {
        box-shadow 0 3px 12px $rowItemShadowColor
      }
    }
  }

  /* inline SVG icon  */
  .icon.outbound {
    color $fontColor
  }

  /* Tip markdown component */
  .custom-block.tip {
    background-color #0c0a08
  }

  /* Code element */
  code {
    color #ffffff
    background #2F2F2F
  }

  /* Language specific code blocks */
  div[class*="language-"] {
    pre {
      scrollbar()
    }
  }

  /* KBD element */
  kbd {
    color #ffffff
    background #2F2F2F
    border-color #5a5d61
  }

  /* Version alert badge */
  .version-alert { 
    border-color #16110d

    p {
      color $fontColor
    }
  }

  /* Table styling starts */
  .scrollable-table {
    scrollbar()
  }

  table:not(.htCore) {
    tr:nth-child(2n) {
      background-color #292929
    }

    th, td {
      border-bottom 1px solid $sectionBorderColor
    }
  }
  /* Table styling ends */

  /* Bottom navigation (below footer) */
  .page-nav {
    .inner {
      border-color $sectionBorderColor
    }
  }

  /* Footer */
  footer.page-edit {
    .edit-link {
      a {
        color $fontColor
      }
    }

    .last-updated {
      color $fontColor
    }
  }
}
