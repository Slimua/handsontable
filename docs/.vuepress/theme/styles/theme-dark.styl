$backgroundColor = #18191A
$fontColor = #f5f6f7
$fontColorLink = #2456F2
$searchBoxBackground = #20232A
$sectionBorderColor = #20232A
$scrollbarThumb = #444950
$searchIcon = #eeeeee
$rowItemBorderColor = #686868
$rowItemShadowColor = #797979

html.theme-dark {

  /* Elements that should have set background-color */
  &,
  div#app,
  header,
  div.links,
  aside.sidebar {
    background $backgroundColor
  }

  body {
    color $fontColor
  }

  h1, h2, h3, h4, h5, h6, p {
    border-bottom-color $sectionBorderColor
  }

  a {
    color $fontColorLink
  }
  
  /* Navbar */
  header.navbar {
    border-color $sectionBorderColor

    /* Navbar links */
    & .nav-link {
      color $fontColor
    }

    /* Support button in navbar */
    & .dropdown-title {
      & .title {
        color $fontColor
      }
      & .arrow.down {
        border-top-color $fontColor
      }
    }
  }

  /* Searchbox */
  .search-box {
    input {
      background $searchBoxBackground url(/img/search.svg) 0.6rem 0.5rem no-repeat
      background-size 1rem
      border-color #43464d
    }

    .searchbox-search-icon {
      stroke $searchIcon
    }
  }

  /* Sidebar */
  .sidebar {
    border-right-color $sectionBorderColor

    /* Sidebar collapsible headings */
    & .sidebar-heading {
      color $fontColor

      & .arrow, & .arrow-down {
        border-color #8B8B8C
      }
    }

    /* Links in the sidebar */
    & a.sidebar-link {
      color $fontColor

      &:hover {
        background #242526
      }

      &.active {
        background #242526
      }
    }

    .sidebar-group {
      &:not(.collapsable) .sidebar-heading:not(.clickable) {
        cursor auto
        color $fontColor
      }
    }
  }

  /* Table of contents */
  .table-of-contents {
    border-left-color $sectionBorderColor

    .toc-container-header {
      color $fontColor
    }

    a {
      color $fontColor

      &.active {
        color: $fontColor
        font-weight bold
      }

      &:hover {
        color $fontColor
      }
    }
  }

  scrollbar() {
    /* Scrollbar (works on Chrome, Edge, and Safari) */
    &::-webkit-scrollbar {
      width 12px // width of the entire scrollbar
    }

    &::-webkit-scrollbar-track {
      background $backgroundColor // color of the tracking area
    }

    &::-webkit-scrollbar-thumb {
      background-color $scrollbarThumb // color of the scroll thumb
      border-radius 20px // roundness of the scroll thumb
      border 2px solid $backgroundColor // creates padding around scroll thumb
    }

    &::-webkit-scrollbar-corner {
      background $backgroundColor
    }

    /* Scrollbar (works on Firefox) */
    & {
      scrollbar-width thin
      scrollbar-color $scrollbarThumb $backgroundColor
    }
  }

  aside {
    scrollbar()
  }

  .tabs-component-tabs {
    background #2f3133

    .tabs-component-tab-a {
      color $fontColor
    }
  }

  /* A navigation element containing clickable fields (columns) */
  .row-items-container {
    .row-item {
      border-color $rowItemBorderColor
      color $fontColor

      &:hover {
        box-shadow 0 3px 12px $rowItemShadowColor
      }
    }
  }

  .page-edit {
    .edit-link {
      a {
        color $fontColor
      }
    }
  }

  /* Inline code */
  .theme-default-content code {
    color $fontColor
  }

  .icon.outbound {
    color $fontColor
  }

  .custom-block.tip {
    background-color #0c0a08
  }

  /* Code block */
  code {
    color #ffffff
    background #2F2F2F
  } 

  /* Version alert badge */
  .version-alert { 
    border-color #16110d

    p {
      color $fontColor
    }
  }

  .custom-block p {
    color $fontColor
  }

  .tabs-component {
    border-color #4d4d4e

    a {
      color $fontColor !important

      &:hover {
        color $fontColorLink !important
      }
    }

    .tabs-component-tabs {
      border-bottom-color #4d4d4e
    }

    .tabs-component-panels {
      background-color #282C34
      border-radius 0

      section {
        &#preview {
          color initial
          background-color #ffffff
        }

        &#code {
          pre {
            padding 20px 24px

            scrollbar()
          }
        }

        &#html {
          pre {
            scrollbar()
          }
        }
      }
    }
  }

  div[class*="language-"] {
    pre {
      scrollbar()
    }
  }

  /* PageNav component */
  .page-nav .inner {
    border-color $sectionBorderColor
  }

  footer {

    & .last-updated {
      color $fontColor
    }
  }
}
